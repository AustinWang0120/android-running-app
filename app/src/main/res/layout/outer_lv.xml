<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingBottom="10dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="15"

        android:orientation="horizontal">



        <TextView
            android:id="@+id/tvOutterLVMonth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30dp"
            android:text="11" />

        <TextView
            android:id="@+id/tvOutterLVTotalMiles"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30dp"
            android:gravity="right"
            android:paddingRight="20dp"
            android:text="8.00 mi" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvOutterLVYear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="15dp"
            android:paddingLeft="2dp"
            android:text="2021" />

        <TextView
            android:id="@+id/tvOutterLVTotalTimes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="15dp"
            android:gravity="right"
            android:paddingRight="20dp"
            android:text="12 times" />

        <TextView
            android:id="@+id/tvOutterLVTotalHours"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="right"
            android:textSize="15dp"
            android:paddingRight="20dp"
            android:text="total 6.6 hrs" />
    </LinearLayout>

</LinearLayout>